contract LibraryTest {
    using SafeMath for uint256;

    // 加法测试
    function testAddition(uint256 a, uint256 b) external  returns (uint256) {
        return a.add(b);
    }

    // 减法测试
    function testSubtraction(uint256 a, uint256 b) external  returns (uint256) {
        return a.sub(b);
    }

    // 乘法测试
    function testMultiplication(uint256 a, uint256 b) external  returns (uint256) {
        return a.mul(b);
    }

    // 除法测试
    function testDivision(uint256 a, uint256 b) external  returns (uint256) {
        return a.div(b);
    }

    // 取余测试
    function testModulo(uint256 a, uint256 b) external  returns (uint256) {
        return a.mod(b);
    }

    function check() external  {
        uint256 a = 128;
        uint256 b = 2;

        uint256 c = a.add(b);
        require(c == 130, "c is not equal to 3");

        c = a.sub(b);
        require(c == 126, "c is not equal to 0");

        c = a.mul(b);
        require(c == 256, "c is not equal to 2");

        c = a.div(b);
        require(c == 64, "c is not equal to 0");
    }
}
